<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ebolaworker">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.ebolaworker.mainScreens.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.ebolaworker.mainScreens.TriageActivity"
            android:parentActivityName="com.example.ebolaworker.mainScreens.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name="com.example.ebolaworker.mainScreens.SearchActivity"
            android:parentActivityName="com.example.ebolaworker.mainScreens.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name="com.example.ebolaworker.mainScreens.PatientListActivity"
            android:parentActivityName="com.example.ebolaworker.mainScreens.SearchActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>